{
  "objective": "Promote LlmTornado as the best C# AI library for building intelligent agents",
  "apiKeys": {
    "openAi": "sk-your-openai-key-here",
    "anthropic": "sk-ant-your-anthropic-key-here",
    "tavily": "tvly-your-tavily-key-here",
    "google": "your-google-key-here",
    "groq": "gsk_your-groq-key-here",
    "devto": "your-devto-api-key-here",
    "linkedin": "your-linkedin-access-token-here",
    "medium": {
      "cookieUid": "your-medium-uid-cookie-here",
      "cookieSid": "your-medium-sid-cookie-here"
    }
  },
  "models": {
    "ideation": "gpt-4o-mini",
    "trendAnalysis": "gpt-4o-mini",
    "research": "gpt-4o",
    "writing": "gpt-4o",
    "review": "gpt-4o",
    "imagePrompt": "gpt-4o-mini"
  },
  "output": {
    "directory": "./output/articles",
    "exportMarkdown": true,
    "exportJson": true,
    "includeMetadata": true
  },
  "imageGeneration": {
    "enabled": true,
    "model": "dall-e-3"
  },
  "imageUpload": {
    "enabled": false,
    "provider": "freeimage",
    "apiKey": ""
  },
  "imageVariations": {
    "enabled": true,
    "formats": [
      {
        "name": "featured-seo",
        "width": 1000,
        "height": 420,
        "description": "Primary site featured image"
      },
      {
        "name": "og-image",
        "width": 1200,
        "height": 630,
        "description": "Open Graph social sharing"
      },
      {
        "name": "twitter-card",
        "width": 1200,
        "height": 600,
        "description": "Twitter card"
      }
    ]
  },
  "reviewLoop": {
    "enabled": true,
    "maxIterations": 3,
    "qualityThresholds": {
      "minWordCount": 800,
      "minReadabilityScore": 60,
      "requireSources": true,
      "minSeoScore": 70
    },
    "improvementCriteria": [
      "Check for factual accuracy and citations",
      "Ensure SEO optimization (keywords, meta description)",
      "Verify clickbait title effectiveness",
      "Validate temporal relevance and trending topics integration",
      "Assess promotional objective integration"
    ]
  },
  "articleGeneration": {
    "maxConcurrent": 3,
    "delayBetweenArticles": 5000,
    "retryAttempts": 2,
    "writingStyleHints": 3
  },
  "trendAnalysis": {
    "maxTopics": 10,
    "relevanceThreshold": 0.6,
    "updateFrequency": "daily"
  },
  "tavily": {
    "maxResults": 5,
    "searchDepth": "advanced",
    "includeDomains": [],
    "excludeDomains": []
  },
  "memeGeneration": {
    "enabled": false,
    "force": false,
    "visionModel": "gpt-4o",
    "memeGenerationModel": "claude-3-5-sonnet-20241022",
    "maxIterations": 3,
    "maxMemesPerArticle": 3,
    "outputDirectory": "./output/memes",
    "minValidationScore": 0.7
  },
  "publishing": {
    "devto": {
      "enabled": false,
      "autoPublish": false
    },
    "linkedin": {
      "enabled": false,
      "autoPublish": false,
      "authorUrn": "urn:li:person:YOUR_PERSON_ID"
    },
    "medium": {
      "enabled": false,
      "autoPublish": false,
      "headless": false,
      "dailyPostLimit": 3
    }
  }
}

